<h1>Flats#new</h1>

<%= form_for [@flat] do |f|%>
  <%= f.label :name%>
  <%= f.text_field :name %>
  <%= f.label :address%>
  <%= f.text_field :address %>
  <%= f.label :description%>
  <%= f.text_field :description %>
  <%= f.label :number_of_guest %>
  <%= f.number_field :number_of_guest %>
  <%= f.label :price_per_night %>
  <%= f.number_field :price_per_night %>
  <%= f.submit %>
  <%= button_tag "Cancel", type: :reset %>
<% end %>
