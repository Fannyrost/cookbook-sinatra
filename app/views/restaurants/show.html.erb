<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.category %></h2>
<p><%= @restaurant.address %></p>

<% if @restaurant.reviews.length != 0 %>
  <p>Reviews</p>
  <% all_reviews = [] %>
  <% sum_of_review = 0 %>
  <% r = @restaurant.reviews.each do |review| %>
    <p><%= review.content %></p>
    <p><%= review.rating %></p>
      <% all_reviews << review.rating %>
      <% sum_of_review += review.rating %>
    <% end %>
  <% average_review = sum_of_review / all_reviews.length %>
  <p>Average rating</p>
  <p><%= average_review %></p>
<% end %>



<h2>Add a review</h2>

<%= simple_form_for [@restaurant, @review] do |f|%>
  <%= f.label :content%>
  <%= f.text_field :content %>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <%= f.submit %>
<% end %>
