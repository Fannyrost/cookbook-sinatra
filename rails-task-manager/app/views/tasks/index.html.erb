<h1>All the tasks</h1>


<% @tasks.each do |task| %>
  <% if task.completed?  %>
    <input type="checkbox" checked >
    <%= link_to task.title, task_path(task) %>
    <p>-</p>
    <%= link_to "Delete the task",task_path(task), method: :delete, data: { confirm: "Are you sure ?"} %>
  <% else %>
    <input type="checkbox" >
    <%= link_to task.title, task_path(task) %>
    <p>-</p>
    <%= link_to "Delete the task",task_path(task), method: :delete, data: { confirm: "Are you sure ?"} %> <br>
  <% end %>
<% end %>
<br>
<%= link_to "Add a new task", "/tasks/new" %>

